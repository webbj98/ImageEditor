<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.webbj.imageeditor.Crop"
    android:background="@color/colorPrimaryDark">


    <ImageView
        android:id="@+id/picture"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="7dp"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:minHeight="400dp"
        android:minWidth="300dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/black"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/crop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:orientation="vertical"
        android:text="Crop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/rotateClockWise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/picture"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/rotateCCW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="8dp"
        android:rotation="180"
        android:rotationX="900"
        app:layout_constraintRight_toRightOf="@+id/picture"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="463dp" />


</android.support.constraint.ConstraintLayout>
